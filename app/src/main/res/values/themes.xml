<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Askly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- Couleurs de texte -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!-- Couleurs de fond -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="Widget.Askly.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Askly.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <!-- Coins arrondis -->
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <!-- Couleur de la bordure quand on focus -->
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <!-- RÃ©duction de la marge verticale -->
        <item name="boxCollapsedPaddingTop">4dp</item>
    </style>

</resources>